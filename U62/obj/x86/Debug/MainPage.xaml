<Page
    x:Class="U62.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:U62"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">



    <StackPanel Background="LightGreen">
        <TextBox x:ConnectionId='2' x:Name="TextBoxCity" 
                 FontSize="30" 
                                                  
                 PlaceholderText="Vui lòng nhập thành phố"
                 Width="1500" />
        <Button x:ConnectionId='3' x:Name="GetWeather"
                Margin="0,10,0,0"
                BorderBrush="White"
                                        
                Content="Xác nhận" 
                Background="Green"
                FontSize="45"
                HorizontalAlignment="Center" Canvas.ZIndex="2"/>
        <TextBlock  FontSize="50" 
                    Text="Thông tin thời tiết" 
                    HorizontalAlignment="Center" 
                    Margin="0,31,0,0"
                    FontWeight="ExtraBold"/>
        <TextBlock x:ConnectionId='4' x:Name="CityName" 
                   FontSize="50"
                   Text="" 
                   HorizontalAlignment="Center"
                   Margin="0,31,0,0"
                   FontWeight="Bold"/>
        <TextBlock x:ConnectionId='5' x:Name="ResultTextBlock"
                   FontSize="50" 
                   Text="" 
                   HorizontalAlignment="Center"
                   Margin="0,31,0,0" 
                   FontWeight="Bold"/>
        <Image x:ConnectionId='6' x:Name="ImageWeather"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Width="200"
               Height="200"/>
        <Border BorderThickness="1" BorderBrush="Black" Height="100"/>
    </StackPanel>
</Page>

